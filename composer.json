{
  "name": "gdejong/php-skeleton",
  "description": "An empty project to start building your next PHP project",
  "license": "MIT",
  "require": {
    "php" : "~7.4"
  },
  "require-dev": {
    "phpunit/phpunit" : "~8.0",
    "squizlabs/php_codesniffer": "~3.0"
  },
  "autoload": {
    "psr-4": {
      "gdejong\\Project\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "gdejong\\Project\\": "tests"
    }
  },
  "scripts": {
    "test": "phpunit",
    "check-style": "phpcs src tests",
    "fix-style": "phpcbf src tests"
  },
  "config": {
    "sort-packages": true
  }
}
